<Window x:Class="CrySvnLink.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About"
        WindowStartupLocation="CenterOwner"
        SizeToContent="Height"
        Width="300"
        DataContext="{Binding Path=AboutViewModel, Source={StaticResource Locator}}">
    <StackPanel Margin="5">       
        <TextBlock Text="{Binding Name}" FontSize="24" FontWeight="Bold" Margin="5"/>
        <TextBlock Text="{Binding Description}" Margin="5" TextWrapping="Wrap"/>
        <TextBlock Text="{Binding Frameworks}" Margin="5" TextWrapping="Wrap"/>
        <StackPanel Orientation="Horizontal" Margin="0,20">
            <TextBlock Text="Please visit "/>
            <TextBlock>
                <Hyperlink NavigateUri="{Binding TsRewindUrl}" RequestNavigate="Hyperlink_RequestNavigate">
                    TimeSplitters Rewind
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </StackPanel>
</Window>
